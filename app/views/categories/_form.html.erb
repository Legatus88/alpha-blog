<%= form_with(model: @category, local: true, html: {class: "form-horizontal", role: "form"}) do |form| %>

  <%= render "shared/errors", model: @category %>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :name %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Create", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
</div>
